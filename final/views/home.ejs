<%- include("partials/header") %>

<div class="container mx-auto flex flex-col items-center py-10 bg-gray-50 min-h-screen">
  <h2 class="text-3xl font-bold text-blue-900 mb-4 text-center">Welcome, <%= name %>!</h2>
  <p class="mb-8 text-gray-600 text-center">Choose a mathematical tool to get started:</p>
  
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4 max-w-6xl">
    <!-- Factorial -->
    <div class="bg-white rounded-xl shadow-lg p-5 hover:shadow-2xl transition hover:scale-105 flex flex-col items-center border border-blue-100">
      <h3 class="text-xl font-bold mb-2 text-blue-700">Factorial Calculator</h3>
      <p class="text-gray-500 mb-4 text-sm text-center flex-1">Calculate n! from a positive integer.</p>
      <a href="/tools/factorial" class="mt-auto px-5 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
        Go to Calculator
      </a>
    </div>

    <!-- Prime Checker -->
    <div class="bg-white rounded-xl shadow-lg p-5 hover:shadow-2xl transition hover:scale-105 flex flex-col items-center border border-green-100">
      <h3 class="text-xl font-bold mb-2 text-green-700">Prime Checker</h3>
      <p class="text-gray-500 mb-4 text-sm text-center flex-1">Check if a number is prime or not.</p>
      <a href="/tools/prime" class="mt-auto px-5 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
        Go to Checker
      </a>
    </div>

    <!-- Arithmetic Calculator -->
    <div class="bg-white rounded-xl shadow-lg p-5 hover:shadow-2xl transition hover:scale-105 flex flex-col items-center border border-yellow-100">
      <h3 class="text-xl font-bold mb-2 text-yellow-700">Arithmetic Calculator</h3>
      <p class="text-gray-500 mb-4 text-sm text-center flex-1">Perform +, −, ×, ÷ between two numbers.</p>
      <a href="/tools/arithmetic" class="mt-auto px-5 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition">
        Go to Calculator
      </a>
    </div>

    <!-- LCM Calculator -->
    <div class="bg-white rounded-xl shadow-lg p-5 hover:shadow-2xl transition hover:scale-105 flex flex-col items-center border border-purple-100">
      <h3 class="text-xl font-bold mb-2 text-purple-700">LCM Calculator</h3>
      <p class="text-gray-500 mb-4 text-sm text-center flex-1">Find the Least Common Multiple of two numbers.</p>
      <a href="/tools/lcm" class="mt-auto px-5 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition">
        Go to Calculator
      </a>
    </div>

    <!-- GCD Calculator -->
    <div class="bg-white rounded-xl shadow-lg p-5 hover:shadow-2xl transition hover:scale-105 flex flex-col items-center border border-rose-100">
      <h3 class="text-xl font-bold mb-2 text-rose-700">GCD Calculator</h3>
      <p class="text-gray-500 mb-4 text-sm text-center flex-1">Find the Greatest Common Divisor of two numbers.</p>
      <a href="/tools/gcd" class="mt-auto px-5 py-2 bg-rose-600 text-white rounded-lg hover:bg-rose-700 transition">
        Go to Calculator
      </a>
    </div>

    <!-- Exponent Calculator -->
    <div class="bg-white rounded-xl shadow-lg p-5 hover:shadow-2xl transition hover:scale-105 flex flex-col items-center border border-indigo-100">
      <h3 class="text-xl font-bold mb-2 text-indigo-700">Exponent Calculator</h3>
      <p class="text-gray-500 mb-4 text-sm text-center flex-1">Calculate a<sup>b</sup> (base raised to power).</p>
      <a href="/tools/exponent" class="mt-auto px-5 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
        Go to Calculator
      </a>
    </div>

    <!-- Square & Square Root -->
    <div class="bg-white rounded-xl shadow-lg p-5 hover:shadow-2xl transition hover:scale-105 flex flex-col items-center border border-cyan-100">
      <h3 class="text-xl font-bold mb-2 text-cyan-700">Square & Root</h3>
      <p class="text-gray-500 mb-4 text-sm text-center flex-1">Calculate n² and √n for any number.</p>
      <a href="/tools/squareroot" class="mt-auto px-5 py-2 bg-cyan-600 text-white rounded-lg hover:bg-cyan-700 transition">
        Go to Calculator
      </a>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
