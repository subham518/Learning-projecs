<%- include("partials/header") %>
<div class="flex flex-col items-center min-h-screen bg-gray-50 py-8">
  <div class="bg-white shadow-lg rounded px-8 pt-6 pb-8 mb-4 w-full max-w-md">
    <h2 class="text-2xl font-bold mb-4 text-center">Register</h2>
    <% if (error) { %>
      <div class="bg-red-200 text-red-800 px-3 py-1 mb-3 rounded">
        <%= error %>
      </div>
    <% } %>
    <form action="/register" method="POST">
      <div class="mb-4">
        <label class="block text-gray-700 mb-2">Name</label>
        <input type="text" name="name" required class="w-full px-3 py-2 border rounded focus:outline-none"/>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 mb-2">Email</label>
        <input type="email" name="email" required class="w-full px-3 py-2 border rounded focus:outline-none"/>
      </div>
      <div class="mb-6">
        <label class="block text-gray-700 mb-2">Password</label>
        <input type="password" name="password" required class="w-full px-3 py-2 border rounded focus:outline-none"/>
      </div>
      <div class="flex items-center justify-between">
        <button type="submit" class="bg-green-600 hover:bg-green-700 transition text-white font-bold py-2 px-4 rounded">
          Register
        </button>
        <a href="/login" class="text-blue-500 hover:text-blue-800 text-sm">Already have an account?</a>
      </div>
    </form>
  </div>
</div>
<%- include("partials/footer") %>
