<%- include("partials/header") %>
<div class="flex flex-col items-center min-h-screen bg-blue-50 py-8">
  <div class="bg-white shadow-lg rounded px-8 pt-6 pb-8 mb-4 w-full max-w-md">
    <h2 class="text-2xl font-bold mb-4 text-center">Login</h2>
    <% if (error) { %>
      <div class="bg-red-200 text-red-800 px-3 py-1 mb-3 rounded">
        <%= error %>
      </div>
    <% } %>
    <form action="/login" method="POST">
      <div class="mb-4">
        <label class="block text-gray-700 mb-2">Email</label>
        <input type="email" name="email" required class="w-full px-3 py-2 border rounded focus:outline-none"/>
      </div>
      <div class="mb-6">
        <label class="block text-gray-700 mb-2">Password</label>
        <input type="password" name="password" required class="w-full px-3 py-2 border rounded focus:outline-none"/>
      </div>
      <div class="flex items-center justify-between">
        <button type="submit" class="bg-blue-700 hover:bg-blue-800 transition text-white font-bold py-2 px-4 rounded">
          Login
        </button>
        <a href="/register" class="text-green-600 hover:text-green-800 text-sm">Register</a>
      </div>
    </form>
  </div>
</div>
<%- include("partials/footer") %>
