<%- include("../partials/header") %>

<div class="flex flex-col items-center min-h-screen bg-white py-10">
  <div class="bg-cyan-50 rounded-xl shadow-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold mb-3 text-cyan-800 text-center">Square & Square Root Calculator</h2>
    <p class="text-gray-700 mb-5 text-center">
      Calculate both <span class="font-semibold text-cyan-800">square (n²)</span> and <span class="font-semibold">square root (√n)</span> of a number.
    </p>

    <form id="sqrtForm" class="flex flex-col gap-4">
      <input type="number" id="sqrtInput" placeholder="Enter a number" required
             class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-cyan-400" />

      <button type="submit"
              class="bg-cyan-600 hover:bg-cyan-700 transition text-white font-bold py-2 px-4 rounded mt-2">
        Calculate Square & Root
      </button>
    </form>

    <div id="sqrtResult" class="mt-6 text-lg text-green-700 text-center font-semibold"></div>

    <!-- Explanation box -->
    <div id="sqrtExplanation" class="mt-6 hidden">
      <div class="bg-cyan-100 border-l-4 border-cyan-600 p-3 rounded">
        <span class="font-medium text-cyan-800 block mb-1">Understanding Squares & Roots</span>
        <p class="text-gray-800 text-sm" id="sqrtExplanationText"></p>
      </div>
    </div>

    <div class="mt-6">
      <div class="bg-cyan-100 border-l-4 border-cyan-600 p-3 rounded">
        <span class="font-medium text-cyan-800">Formula:</span>
        <div class="font-mono text-gray-800 text-sm mt-1">
          n² = n × n<br/>
          √n = number whose square is n
        </div>
      </div>
      <div class="mt-3 flex flex-col gap-2">
        <span class="bg-blue-100 text-blue-900 px-3 py-1 rounded text-xs font-medium shadow">Example: 5² = 25</span>
        <span class="bg-purple-100 text-purple-900 px-3 py-1 rounded text-xs font-medium shadow">Example: √25 = 5</span>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
