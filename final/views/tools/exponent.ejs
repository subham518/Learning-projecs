<%- include("../partials/header") %>

<div class="flex flex-col items-center min-h-screen bg-white py-10">
  <div class="bg-indigo-50 rounded-xl shadow-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold mb-3 text-indigo-800 text-center">Exponent Calculator</h2>
    <p class="text-gray-700 mb-5 text-center">
      Compute <span class="font-semibold text-indigo-800">a<sup>b</sup></span>, which means multiplying the base
      <span class="font-semibold">a</span> by itself <span class="font-semibold">b</span> times.
    </p>

    <form id="expForm" class="flex flex-col gap-4">
      <input type="number" id="expBase" placeholder="Base (a)" required
             class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-400" />
      <input type="number" id="expPower" placeholder="Exponent (b)" required
             class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-400" />

      <button type="submit"
              class="bg-indigo-600 hover:bg-indigo-700 transition text-white font-bold py-2 px-4 rounded mt-2">
        Calculate a<sup>b</sup>
      </button>
    </form>

    <div id="expResult" class="mt-6 text-xl text-green-700 text-center"></div>

    <!-- Explanation box -->
    <div id="expExplanation" class="mt-6 hidden">
      <div class="bg-indigo-100 border-l-4 border-indigo-600 p-3 rounded">
        <span class="font-medium text-indigo-800 block mb-1">How was this power calculated?</span>
        <p class="text-gray-800 text-sm" id="expExplanationText"></p>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
